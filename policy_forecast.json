{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "CostExplorerReadAndForecast",
            "Effect": "Allow",
            "Action": [
                "ce:GetCostForecast",
                "ce:GetCostAndUsage",
                "ce:GetDimensionValues",
                "ce:GetCostCategories",
                "ce:GetReservationCoverage",
                "ce:GetSavingsPlansCoverage",
                "ce:GetUsageForecast",
                "ce:GetRightsizingRecommendation"
            ],
            "Resource": "*"
        },
        {
            "Sid": "BCMRecommendedActions",
            "Effect": "Allow",
            "Action": [
                "bcm-recommended-actions:ListRecommendedActions"
            ],
            "Resource": "*"
        },
        {
            "Sid": "BillingConsoleView",
            "Effect": "Allow",
            "Action": [
                "aws-portal:ViewBilling",
                "aws-portal:ViewUsage"
            ],
            "Resource": "*"
        }
    ]
}
